<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/calling_background_gradient">

    <!-- Status Bar Space -->
    <View
        android:id="@+id/statusBarSpace"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Avatar Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/avatarCard"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="80dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:background="@drawable/calling_avatar_background" />

    </androidx.cardview.widget.CardView>

    <!-- Call Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/callInfoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/calling_surface"
        app:layout_constraintTop_toBottomOf="@id/avatarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Call Status -->
            <TextView
                android:id="@+id/tvCallStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incoming Call"
                android:textSize="14sp"
                android:textColor="@color/calling_text_secondary"
                android:textStyle="normal"
                android:layout_marginBottom="8dp" />

            <!-- Caller Name -->
            <TextView
                android:id="@+id/tvCallerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:textSize="28sp"
                android:textColor="@color/calling_text_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <!-- Caller Number -->
            <TextView
                android:id="@+id/tvCallerNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/calling_text_secondary"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Timer Card (hidden until call connected) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/timerCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/calling_timer_background"
        app:layout_constraintTop_toBottomOf="@id/callInfoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_access_time"
                app:tint="@color/calling_text_secondary"
                android:layout_marginEnd="8dp" />

            <Chronometer
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/calling_text_primary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Decline Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardbtnDecline"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="0dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageButton
                android:id="@+id/btnDecline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_call_end"
                android:background="@drawable/calling_decline_button"
                app:tint="@color/calling_text_primary"
                android:contentDescription="Decline call" />

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/spaceBetweenButtons"
            android:layout_width="90dp"
            android:layout_height="0dp"/>
        <!-- Accept Button -->
        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:id="@+id/cardbtnAccept"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageButton
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_call"
                android:background="@drawable/calling_accept_button"
                app:tint="@color/calling_text_primary"
                android:contentDescription="Accept call" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
