<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.bnw.voip.ui.main.dialer.DialerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialer_background"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Modern Header -->




                <!-- Header Row -->

                <!-- Phone Number Display -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="60dp"
                android:paddingHorizontal="16dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/phoneNumber"
                    style="@style/ModernDialerPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Enter phone number"
                    android:maxLines="2"
                    android:textColorHint="@color/text_secondary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnDelete"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="01712345678" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnDelete"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/backspace"
                        app:tint="@color/white" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>




            <!-- Modern Dialpad -->


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/button1"
                        style="@style/ModernDialKey"
                        android:text="1" />

                    <TextView
                        android:id="@+id/button2"
                        style="@style/ModernDialKey"
                        android:text="2\nABC"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/button3"
                        style="@style/ModernDialKey"
                        android:text="3\nDEF"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/button4"
                        style="@style/ModernDialKey"
                        android:text="4\nGHI"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/button5"
                        style="@style/ModernDialKey"
                        android:text="5\nJKL"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/button6"
                        style="@style/ModernDialKey"
                        android:text="6\nMNO"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/button7"
                        style="@style/ModernDialKey"
                        android:text="7\nPQRS"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/button8"
                        style="@style/ModernDialKey"
                        android:text="8\nTUV"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/button9"
                        style="@style/ModernDialKey"
                        android:text="9\nWXYZ"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Row 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/buttonStar"
                        style="@style/ModernDialKey"
                        android:text="*"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/button0"
                        style="@style/ModernDialKey"
                        android:text="0\n+"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/buttonHash"
                        style="@style/ModernDialKey"
                        android:text="#"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>


            <!-- Modern Call Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <androidx.cardview.widget.CardView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="8dp">

                    <ImageButton
                        android:id="@+id/btnCall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/modern_call_button_background"
                        android:contentDescription="Make Call"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_call"
                        app:tint="@color/white" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
