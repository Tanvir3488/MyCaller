<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/contacts_card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Contact Avatar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contact_photo_container"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/contacts_avatar_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/contact_photo_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/contact_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:src="@drawable/ic_person"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/contact_initial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="J" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Contact Information -->
        <LinearLayout
            android:id="@+id/contact_info_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/contact_photo_container"
            app:layout_constraintEnd_toStartOf="@id/action_buttons_layout"
            app:layout_constraintStart_toEndOf="@id/contact_photo_container"
            app:layout_constraintTop_toTopOf="@id/contact_photo_container">

            <!-- Contact Name -->
            <TextView
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/contacts_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="John Doe" />

            <!-- Phone Number -->
            <TextView
                android:id="@+id/contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:fontFamily="monospace"
                android:maxLines="1"
                android:textColor="@color/contacts_text_secondary"
                android:textSize="14sp"
                tools:text="+1 234 567 8900" />

            <!-- Multiple Numbers Indicator -->
            <LinearLayout
                android:id="@+id/multiple_numbers_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/contacts_text_secondary" />

                <TextView
                    android:id="@+id/multiple_numbers_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/contacts_text_secondary"
                    android:textSize="12sp"
                    tools:text="3 numbers" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/action_buttons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/contact_photo_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/contact_photo_container">

            <!-- Call Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="@color/dialer_call_button"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <ImageButton
                    android:id="@+id/call_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/modern_call_button_background"
                    android:contentDescription="Call contact"
                    android:src="@drawable/ic_call"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
