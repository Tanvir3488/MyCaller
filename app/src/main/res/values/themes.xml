<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Voip" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Dark theme customization -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primary_purple_dark</item>
        <item name="colorAccent">@color/accent_cyan</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Theme.Voip" parent="Base.Theme.Voip" />
    <style name="DialButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/bg_circle_grey</item>
        <item name="android:backgroundTint">@color/dialer_key_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dialer_key_text_primary</item>
    </style>

    <style name="DialKey">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dial_key_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dialer_key_text_primary</item>
    </style>

    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavTextActive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bottom_nav_selected</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/bottom_nav_unselected</item>
    </style>

    <!-- Modern Dialer Styles -->
    <style name="ModernDialKey">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/modern_dial_key_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialer_key_text_primary</item>
        <item name="android:lineSpacingExtra">-4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ModernDialerTitle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ModernDialerPhoneNumber" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">monospace</item>
    </style>

</resources>
